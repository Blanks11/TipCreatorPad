<!DOCTYPE html>
    <html lang="en">
    <html>
    <head>
      <title>Tip Contract Frontend</title>
      <script src="https://cdn.jsdelivr.net/npm/ethers@5.7.2/dist/ethers.min.js"></script>
    </head>
    <body>
      <h1>Tip the Creator</h1>
    
      <input id="amount" placeholder="Amount in SHM" type="number" />
      <button id="tipButton">Send Tip</button>
    
      <h3 id="totalTips"></h3>
    
      <script>
        const contractAddress = "YOUR_CONTRACT_ADDRESS"; 0x7Cdd7526195058B38cf2399f822f593a28982114
        const abi = [
        [
	{
		"inputs": [
			{
				"internalType": "address payable",
				"name": "creator",
				"type": "address"
			}
		],
		"name": "tip",
		"outputs": [],
		"stateMutability": "payable",
		"type": "function"
	},
	{
		"anonymous": false,
		"inputs": [
			{
				"indexed": true,
				"internalType": "address",
				"name": "creator",
				"type": "address"
			},
			{
				"indexed": true,
				"internalType": "address",
				"name": "tipper",
				"type": "address"
			},
			{
				"indexed": false,
				"internalType": "uint256",
				"name": "amount",
				"type": "uint256"
			}
		],
		"name": "Tipped",
		"type": "event"
	},
	{
		"inputs": [
			{
				"internalType": "address",
				"name": "",
				"type": "address"
			}
		],
		"name": "totalTips",
		"outputs": [
			{
				"internalType": "uint256",
				"name": "",
				"type": "uint256"
			}
		],
		"stateMutability": "view",
		"type": "function"
	}
]
        ];
    
        let provider, signer, contract;
    
        async function init() {
          if (window.ethereum) {
            provider = new ethers.providers.Web3Provider(window.ethereum);
            await provider.send("eth_requestAccounts", []);
            signer = provider.getSigner();
            contract = new ethers.Contract(contractAddress, abi, signer);
            loadTotalTips();
          } else {
            alert("Please install MetaMask to use this app!");
          }
        }
    
        async function loadTotalTips() {
          const total = await contract.totalTips();
          document.getElementById("totalTips").innerText = `Total Tips: ${ethers.utils.formatEther(total)} SHM`;
        }
    
        async function sendTip() {
          const amount = document.getElementById("amount").value;
          const tx = await contract.tipCreator({ value: ethers.utils.parseEther(amount) });
          await tx.wait();
          loadTotalTips();
        }
    
        document.getElementById("tipButton").onclick = sendTip;
    
        init();
      </script>
    </body>
    </html>
    